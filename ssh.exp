#!/usr/bin/expect -f

set timeout 20

set host [lindex $argv 0]

set user [lindex $argv 1]

set password [lindex $argv 2]

spawn ssh "$user\@$host"

expect {
  -re ".*es.*o.*" {
    exp_send "yes\r"
    exp_continue
  }
  -re ".*sword.*" {
    exp_send "$password\r"
  }
  -re "/id_ecdsa':" {
    exp_send "$password\r"
  }
}

interact
